{
  "$schema": "http://bigcontent.io/cms/schema/v1/schema#",
  "id": "https://raw.githubusercontent.com/brakesdev/amplience-content-types/master/accelerator-video.json",
  "title": "Video Accelerator",
  "description": "Video Accelerator",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "propertyOrder": ["videoType", "videoUri"],
  "type": "object",
  "properties": {
    "videoType": {
      "type": "string",
      "title": "Video Type",
      "enum": ["amplience", "youtube", "vimeo", "facebook"],
      "description": "Amplience Video, YouTube, Vimeo, Facebook",
      "format": "text"
    },
    "videoId": {
      "title": "Video ID",
      "description": "provide video Id",
      "format": "text",
      "type": "string"
    },
    "playerControls": {
      "title": "Player Controls",
      "description": "Show/hide player controls",
      "enum": ["show", "hide"],
      "format": "text",
      "type": "string"
    },
    "autoplay": {
      "title": "Auto play",
      "description": "Do you want video to play on page load?",
      "enum": ["true", "false"],
      "format": "text",
      "type": "string"
    },
     "mute": {
      "title": "Mute video",
      "description": "Do you want to mute video?",
      "enum": ["true", "false"],
      "format": "text",
      "type": "string"
    }
  }
}
