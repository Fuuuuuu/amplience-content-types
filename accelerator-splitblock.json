{
  "$schema": "http://bigcontent.io/cms/schema/v1/schema#",
  "id": "https://raw.githubusercontent.com/brakesdev/amplience-content-types/master/accelerator-splitblock.json",
  "title": "Split Block Accelerator",
  "description": "Split Block Accelerator",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "propertyOrder": ["chooser", "image", "imageAltText", "mediaAlignment", "heading", "headingAlignment", "headingUnderlineColour", "bodyText", "bodyTextAlignment", "splitLayout"],
  "type": "object",
  "properties": {
    "chooser": {
      "title": "Array of content-items",
      "description": "A chooser list",
      "type": "array",
      "items": {
        "type": "object",
        "title": "Chooser list",
        "description": "A chooser list",
        "allOf": [
          {
            "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"
          },
          {
            "properties": {
              "contentType": {
                "title": "Select accelerators content:",
                "enum": ["https://raw.githubusercontent.com/brakesdev/amplience-content-types/master/accelerator-video.json"]
              }
            }
          }
        ]
      }
    },
    "image": {
      "title": "Image",
      "description": "Insert an image",
      "type": "object",
      "anyOf": [
        {
          "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/image-link"
        }
      ]
    },
    "mediaAlignment": {
      "title": "Media (video or image) horizontal alignment",
      "type": "string",
      "enum": ["left", "right"],
      "description": ""
    },
    "imageAltText": {
      "type": "string",
      "title": "Image alt text",
      "description": "insert image alt text"
    },
    "heading": {
      "type": "string",
      "title": "Heading Text",
      "description": "",
      "format": "text"
    },
    "headingAlignment": {
      "type": "string",
      "enum": ["left", "right", "center"],
      "title": "Heading horizontal alignment",
      "description": ""
    },
    "headingUnderlineColour": {
      "type": "string",
      "enum": ["green", "dark-green", "red", "white", "blue-gray", "dark-gray", "aa-gray", "light-gray", "purple", "blue", "dark-purple"],
      "title": "Heading underline colour",
      "description": ""
    },
    "bodyText": {
      "type": "string",
      "title": "Body text",
      "description": "",
      "format": "text"
    },
    "bodyTextAlignment": {
      "type": "string",
      "enum": ["left", "right", "center"],
      "title": "Body text horizontal alignment",
      "description": ""
    },
    "splitLayout": {
      "type": "string",
      "enum": ["50-50", "70-30", "30-70"],
      "title": "Split component",
      "description": "Choose how the component will be split between text and media"
    }
  }
}
